@using System.Web.UI.WebControls
@model Glamry.Web.Models.RegistrationModel


@using (Html.BeginForm())
{
    <div class="container-fluid modal-body">
        <div class="form-group row">
            <div class="col-lg-4 ">
                @Html.LabelFor(x => x.FirstName)
            </div>
            <div class="col-lg-8 ">
                @Html.TextBoxFor(x => x.FirstName, new { autocomplete = "off", Class = "form-control", placeholder = "First Name" })
                @Html.ValidationMessageFor(x => x.FirstName)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-4 ">
                @Html.LabelFor(x => x.LastName)
            </div>
            <div class="col-lg-8">
                @Html.TextBoxFor(x => x.LastName, new { autocomplete = "off", Class = "form-control", placeholder = "Last Name" })
                @Html.ValidationMessageFor(x => x.LastName)
            </div>
        </div>

        <div class="form-group row">
            <div class="col-lg-4 ">
                @Html.LabelFor(x => x.Email)
            </div>
            <div class="col-lg-8">
                @Html.TextBoxFor(x => x.Email, new { autocomplete = "off", Class = "form-control", placeholder = "Email Address" })
                @Html.ValidationMessageFor(x => x.Email)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-4 ">
                @Html.LabelFor(x => x.PhoneNumber)
            </div>
            <div class="col-lg-8">
                @Html.TextBoxFor(x => x.PhoneNumber, new { autocomplete = "off", Class = "form-control", placeholder = "Phone Number" })
                @Html.ValidationMessageFor(x => x.PhoneNumber)
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <button type="submit" name="login" value="save" class="btn btn btn-success pull-left">Continue</button>
                @*<a type="submit"  href="#regCarousel" data-slide="next"   class="btn btn btn-success pull-left">Create</a>*@

            </div>
        </div>
    </div>
}