@model Glamry.Web.Models.LoginModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container modal-body">

        <div class="row ">
            <div class="form-group col-sm-4">
                @Html.LabelFor(x => x.Email)
            </div>
            <div class="form-group col-sm-8 pull-left">
                @Html.TextBoxFor(x => x.Email, new { autocomplete = "OFF", Id = "emailText", Class = "form-control", placeholder = "Email" })
                <small>@Html.ValidationMessageFor(x => x.Email)</small>
            </div>

        </div>

        <div class="row">
            <div class="form-group col-sm-4 pull-left">
                @Html.LabelFor(x => x.Password)
            </div>
            <div class="form-group col-sm-8 pull-left">
                @Html.PasswordFor(x => x.Password, new { autocomplete = "OFF", Id = "passText", Class = "form-control", placeholder = "Password" })
                <small>@Html.ValidationMessageFor(x => x.Password)</small>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12"></div>
        </div>
        <div>
            <div class="row">
                <div class="col-lg-12">
                    <button type="submit" name="login" value="save" class="btn btn btn-success pull-left">Login</button>

                    <p>@Html.ActionLink("Forgot Password", "PasswordRecovery", "Home", new { Class = "pull-left", title = "Recover Password" }) </p>
                </div>
            </div>
        </div>
    </div>
   
    <div class="clearfix"></div>
    <span class="label label-warning">@Html.ValidationSummary(true)</span>
  
}

